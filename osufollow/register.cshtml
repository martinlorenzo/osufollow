@{
    Page.Title = "osu!follow";
    Layout = "_Layoutregister.cshtml";
}

<head>
    <meta charset="UTF-8">	<!--El formato de caracteres que voy a permitir en mi sitio-->
    <meta name="keywords" content="osu!, follow, osu!follow, game, gaming, music, osu">   <!--Palabras clave para que el buscador encuentre nuestro sitio-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="sources/osufollowlogo.png" />

</head>
<br />
<br />
<br />
<body background="sources/backosufollow.png">
    <div class="container">
        <form id="osufreg" name="osufreg" method="post" action="~/profile.cshtml">
            <div class="form-group">
                <label for="inputName" class="col-form-label">Username</label>
                <input type="text" class="form-control" name="inputName" placeholder="xXxhardcoregamer69xXx">
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-form-label">Email</label>
                <input type="email" class="form-control" name="inputEmail" placeholder="name@example.com">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputPassword" class="col-form-label">Password</label>
                    <input type="password" class="form-control" name="inputPassword" placeholder="Password">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword2" class="col-form-label">Confirm Password</label>
                    <input type="password" class="form-control" name="inputPassword2" placeholder="Confirm Password">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" name="btnRegistrarse" value="Sign in" />
            </div>
        </form>
    </div>

</body>